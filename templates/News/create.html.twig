{% extends '@App/base.html.twig' %}

{% block title %}{{ parent() }} - Add news{% endblock title %}

{% block body %}
    <h1>{{ isEditable ? "Edit news " ~ form.vars.data.title : "Create news" }}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">{{ isEditable ? 'Edit' : 'Create' }}</button>
    {{ form_end(form) }}
{% endblock %}